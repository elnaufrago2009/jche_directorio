#region-Users.container
  .region
    .page-header
      %h1= page_title!('Usuarios')
    .region
      = link_to "<span class='glyphicon glyphicon-plus'></span> Crear Usuario".html_safe, new_user_registration_path, class: 'btn btn-primary btn-sm' 
      = link_to '<span class="glyphicon glyphicon-off"></span> Salir'.html_safe, destroy_user_session_path, :method => :delete, class: 'btn btn-danger btn-sm'
    %br
    .row
      .col-sm-8
        %table.table.table-condensed
          %tr
            %th #id
            %th Nombre
            %th Apellido
            %th Email
            %th Acciones
          - @users.each do |user|
            %tr
              %td= user.id
              %td= user.nombre
              %td= user.apellido
              %td= user.email
              %td 
                = link_to '<span class="glyphicon glyphicon-eye-open"></span> Ver'.html_safe, user, class: 'btn btn-info btn-sm'
                = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_user_path(user), class: 'btn btn-success btn-sm'
                = link_to '<span class="glyphicon glyphicon-trash"></span> Eliminar'.html_safe, user, :method => :delete, :data => {:confirm => 'Â¿Estas seguro?'}, class: 'btn btn-danger btn-sm'
		    



    	



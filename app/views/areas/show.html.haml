#region-areas.container
  .region
    .page-header
      %h1= page_title!('Area')

  .region
    %p
      %b Nombre:
      = @area.nombre
    %p
      %b Descripcion:
      = @area.descripcion

  .region
    .admin-controls
      - if current_admin
        = link_to 'Editar', edit_area_path(@area), class: 'btn btn-success'
      = link_to 'Regresar', areas_path, class: 'btn btn-warning'

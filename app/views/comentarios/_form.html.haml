= form_for @comentario, :html => { class: 'form-horizontal', role: 'form' } do |f|
  - if @comentario.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comentario.errors.count, "error")}"
      %ul
        - @comentario.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :tiked_id, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :tiked_id, class: 'form-control'
  .form-group
    = f.label :user_id, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :user_id, class: 'form-control'
  .form-group
    = f.label :admin_id, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.number_field :admin_id, class: 'form-control'
  .form-group
    = f.label :content, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_area :content, class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-default'

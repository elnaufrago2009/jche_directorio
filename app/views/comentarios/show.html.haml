#region-comentarios.container
  .region
    .region-title
      %h1= page_title!('comentario')

  .region
    %p
      %b Tiked:
      = @comentario.tiked_id
    %p
      %b User:
      = @comentario.user_id
    %p
      %b Admin:
      = @comentario.admin_id
    %p
      %b Content:
      = @comentario.content

  .region
    - if current_admin
      .admin-controls
        = link_to 'Editar', edit_comentario_path(@comentario), class: 'btn btn-success'
    = link_to 'Regresar', comentarios_path, class: 'btn btn-warning'

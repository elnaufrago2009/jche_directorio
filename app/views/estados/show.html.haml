#region-estados.container
  .region
    .page-header
      %h1= page_title!('Estado')

  .region
    %p
      %b Nombre:
      = @estado.nombre
    %p
      %b Descripcion:
      = @estado.descripcion

  .region    
    .admin-controls
      = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_estado_path(@estado), class: 'btn btn-success btn-sm'
      = link_to '<span class="glyphicon glyphicon-arrow-left"></span> Regresar'.html_safe, estados_path, class: 'btn btn-warning btn-sm'

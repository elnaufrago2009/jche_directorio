= form_for @reclamo, :html => { class: 'form-horizontal', role: 'form' } do |f|
  - if @reclamo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reclamo.errors.count, "error")}"
      %ul
        - @reclamo.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :nombre, class: 'col-sm-2 control-label'
    .col-sm-3
      = f.text_field :nombre, class: 'form-control'
  .form-group
    = f.label :descripcion, class: 'col-sm-2 control-label'
    .col-sm-5
      = f.text_area :descripcion, class: 'form-control'
  .form-group
    .col-sm-2
    .col-sm-5
      = f.submit 'Guardar', class: 'btn btn-default btn-sm'

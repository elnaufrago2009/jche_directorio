#region-reclamos.container

  .region
    .page-header
      %h1= page_title!('Reclamos')

    .region      
      .admin-control
        = link_to '<span class="glyphicon glyphicon-plus"></span> Crear Reclamo'.html_safe, new_reclamo_path, class: 'btn btn-primary btn-sm'
      %br
      .row
        .col-sm-6
          .table-responsive
            %table.table
              %tr
                %th Nombre
                %th Descripcion
                %th Acciones            

              - @reclamos.each do |reclamo|
                %tr
                  %td= reclamo.nombre
                  %td= reclamo.descripcion
                  %td
                    = link_to '<span class="glyphicon glyphicon-eye-open"></span> Ver'.html_safe, reclamo, class: 'btn btn-info btn-sm'              
                    = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_reclamo_path(reclamo), class: 'btn btn-success btn-sm'
                    = link_to '<span class="glyphicon glyphicon-trash"></span> Eliminar'.html_safe, reclamo, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger btn-sm'

#region-empresas.container

  .region
    .page-header
      %h1= page_title!('Empresas')
    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Empresa', new_empresa_path, class: 'btn btn-primary'
      %br
      .row
        .col-sm-7
          .table-responsive
            %table.table
              %tr
                %th Nombre
                %th Descripcion          
                %th Acciones

              - @empresas.each do |empresa|
                %tr
                  %td= empresa.nombre
                  %td= empresa.descripcion
                  %td
                    = link_to 'Ver', empresa, class: 'btn btn-info btn-sm'
                    - if current_admin
                      = link_to 'Editar', edit_empresa_path(empresa), class: 'btn btn-success btn-sm'
                      = link_to 'Eliminar', empresa, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger btn-sm'

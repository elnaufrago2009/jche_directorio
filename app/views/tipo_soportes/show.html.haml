#region-tipo_soportes.container
  .region
    .page-header
      %h1= page_title!('Tipo Soporte')

  .region
    %p
      %b Nombre:
      = @tipo_soporte.nombre
    %p
      %b Descripcion:
      = @tipo_soporte.descripcion

  .region    
    .admin-controls
      = link_to '<span class="glyphicon glyphicon-edit"></span> Editar'.html_safe, edit_tipo_soporte_path(@tipo_soporte), class: 'btn btn-success btn-sm'
      = link_to '<span class="glyphicon glyphicon-arrow-left"></span> Regresar'.html_safe, tipo_soportes_path, class: 'btn btn-warning btn-sm'
